<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Alimentos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onBackground"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_theme_onSurface"
            android:layout_marginBottom="12dp"/>

        <!-- Ejemplo de alimentos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍏 Manzana - 52 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍗 Pollo a la plancha - 165 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍚 Arroz blanco - 130 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥦 Brócoli - 55 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🐟 Salmón - 208 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍞 Pan integral - 247 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧀 Queso cheddar - 403 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥚 Huevo - 78 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥩 Bistec de res - 271 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥜 Almendras - 576 kcal"
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginBottom="8dp"/>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_theme_onSurface"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <!-- Botón de añadir -->
        <Button
            android:id="@+id/btn_add_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Añadir Alimento"
            android:backgroundTint="@color/md_theme_primary"
            android:textColor="@color/md_theme_onPrimary"/>
    </LinearLayout>
</ScrollView>
