<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_background"
    android:padding="16dp">

    <!-- Título Principal -->
    <TextView
        android:id="@+id/tv_consumption_dates_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historial de Consumo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onBackground"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>

    <!-- Línea separadora blanca -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <!-- Selector de Fecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@color/md_theme_surface"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha:"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elegir Fecha"
            android:backgroundTint="@color/md_theme_primary"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Lista de Alimentos Consumidos -->
    <TextView
        android:id="@+id/tv_food_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alimentos consumidos:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onBackground"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/md_theme_surface"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍏 Manzana - 95 kcal (26/01/2025)"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍗 Pechuga de Pollo - 250 kcal (26/01/2025)"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍚 Arroz Integral - 220 kcal (25/01/2025)"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🥑 Aguacate - 160 kcal (25/01/2025)"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:padding="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🍞 Pan Integral - 80 kcal (24/01/2025)"
            android:textSize="16sp"
            android:textColor="@color/md_theme_onBackground"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Botón flotante para agregar alimentos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Añadir alimento"
        app:backgroundTint="@color/md_theme_primary"
        app:tint="@android:color/white"/>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_background"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_default"
        app:itemTextColor="@color/nav_item_selected"
        app:labelVisibilityMode="labeled"
        android:layout_marginTop="8dp"/>
</LinearLayout>
