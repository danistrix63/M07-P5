<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Contenedor para los fragmentos -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Contenedor con ScrollView para los botones -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="@color/md_theme_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_login"
                style="@style/ButtonStyle"
                android:text="@string/login"/>

            <Button
                android:id="@+id/btn_register"
                style="@style/ButtonStyle"
                android:text="@string/register"/>

            <Button
                android:id="@+id/btn_recover_password"
                style="@style/ButtonStyle"
                android:text="@string/recover_password"/>

            <Button
                android:id="@+id/btn_dates"
                style="@style/ButtonStyle"
                android:text="@string/dates"/>

            <Button
                android:id="@+id/btn_tracking"
                style="@style/ButtonStyle"
                android:text="@string/tracking"/>

            <Button
                android:id="@+id/btn_add_food"
                style="@style/ButtonStyle"
                android:text="@string/add_food"/>

            <Button
                android:id="@+id/btn_preferences"
                style="@style/ButtonStyle"
                android:text="@string/preferences"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_background"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_default"
        app:itemTextColor="@color/nav_item_selected"/>
</LinearLayout>
