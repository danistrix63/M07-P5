<resources>
    <!-- Estilo de la aplicación -->
    <style name="Theme.M07P5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="android:windowBackground">@color/md_theme_background</item>
    </style>

    <!-- Estilo para los títulos -->
    <style name="TitleStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/md_theme_onBackground</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para los EditText -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@color/md_theme_secondary</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
